{
    "name": "cross-lerna/php-sample-2",
    "version": "1.0.0",
    "description": "a php sample package for poc purposes",
    "minimum-stability": "stable",
    "license": "proprietary",
    "require": {
        "psr/http-message": "^2.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Sample\\": "src"
        }
    },
    "scripts": {
        "lint": "./vendor/bin/pint src",
        "test": "./vendor/bin/phpunit --testdox tests"
    }
}
